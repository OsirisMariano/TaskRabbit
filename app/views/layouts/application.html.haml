%html
  %head
    %title TaskRabbit
    = stylesheet_link_tag "application", media: "all"
    = javascript_importmap_tags "application"
    = csrf_meta_tags
  %body
    - Category.all.each do |category|
      = link_to category.name, tasks_path(category: category.name)
    = yield



